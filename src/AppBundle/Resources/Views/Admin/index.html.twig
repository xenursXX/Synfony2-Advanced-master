{% extends 'base.html.twig' %}

{% block content %}



<h1>
    Admins list
    <a class="btn btn-success" href="{{ path('admin_form') }}" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
    </a>
</h1>

<div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Admin</th>
            <th>Email</th>
            <th>Functions</th>
        </tr>
        </thead>
        <tbody>
        {% for admin in admins %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ admin.firstName }} {{ admin.lastName }}</td>
                <td>{{ admin.email }}</td>
                <td>
                    <a class="btn btn-warning btn-xs" href="{{ path('admin_update', {id: admin.id}) }}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update
                    </a>
                    <a class="btn btn-danger btn-xs" href="{{ path('admin_delete', {id: admin.id}) }}" role="button">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div><!-- /example -->

{% endblock %}