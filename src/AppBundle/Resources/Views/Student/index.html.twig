{% extends 'base.html.twig' %}

{% block content %}

<h1>
    Students list
    <a class="btn btn-success" href="{{ path('student_form') }}" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
    </a>
</h1>


<div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Functions</th>
        </tr>
        </thead>
        <tbody>
        {% for student in students %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ student.firstName }} {{ student.lastName }}</td>
                <td>{{ student.email }}</td>
                <td>
                    <a class="btn btn-warning btn-xs" href="{{ path('student_update', {id: student.id}) }}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update
                    </a>
                    <a class="btn btn-danger btn-xs" href="{{ path('student_delete', {id: student.id}) }}" role="button">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div><!-- /example -->

{% endblock %}
