{% extends 'base.html.twig' %}

{% block content %}
<h1>
    Exams list
    <a class="btn btn-success" href="{{ path('exam_form') }}" role="button">
        <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add
    </a>
</h1>

<div class="bs-example" data-example-id="striped-table">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Examen</th>
            <th>Type</th>
            <th>Functions</th>
        </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <th scope="row">{{ loop.index }}</th>
                <td>{{ exam.name }}</td>
                <td>{{ exam.type }}</td>
                <td>
                    <a class="btn btn-warning btn-xs" href="{{ path('exam_update', {id: exam.id}) }}" role="button">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Update
                    </a>
                    <a class="btn btn-danger btn-xs" href="{{ path('exam_delete', {id: exam.id}) }}" role="button">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div><!-- /example -->

{% endblock %}